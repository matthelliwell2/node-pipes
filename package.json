{
  "name": "@matthelliwell/node-pipes",
  "version": "0.0.1-alpha1",
  "description": "",
  "scripts": {
    "build": "npm run compile && npm run lint && npm run test",
    "compile": "tsc",
    "lint": "eslint . --max-warnings 0  --ext .ts",
    "test": "npx jest --silent --runInBand --coverage .*spec.*ts"
  },
  "keywords": ["async", "worker threads", "pipes", "filters"],
  "author": {
    "name": "Matt Helliwell",
    "email": "me@matthelliwell.org"
  },
  "license": "ISC",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/matthelliwell2/node-pipes.git"
  },
  "dependencies": {
    "@divine/synchronization": "1.2.1",
    "@rauschma/stringio": "1.4.0",
    "async": "3.2.3",
    "denque": "2.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/async": "3.2.12",
    "@types/jest": "27.0.3",
    "@types/mockdate": "^3.0.0",
    "@types/node": "17.0.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "eslint": "8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-sonarjs": "0.11.0",
    "jest": "27.4.5",
    "mockdate": "^3.0.5",
    "prettier": "2.5.1",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "printWidth": 180,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/SetUp.ts"
    ],
    "testMatch": [
      "**/*spec.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/__mocks__/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
